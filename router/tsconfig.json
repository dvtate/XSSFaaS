{
    "compilerOptions": {
        "strict": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "pretty": true,
        "sourceMap": true,
        "target": "ES2020",
        "resolveJsonModule": true,
        "outDir": "./dist",
        "strictNullChecks": false,
        "esModuleInterop": true,
        "allowJs": true
    },
    "include": [
        "src/*.js",
        "src/*.ts",
        "src/*/*.js",
        "src/*/*.ts",
    ],
    "exclude": [
        "node_modules", "dist"
    ]
}